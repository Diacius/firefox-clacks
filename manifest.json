{
    "manifest_version": 2,
    "name": "Clacks for Firefox",
    "version" : "0.1",
    "description": "Display X-Clacks-Overhead headers, and send GNU Terry Pratchett to websites",
    "icons": {
        "48": "icon-48.png"
      },
    "background": 
        {
          "scripts": ["clacks.js"]
        },
    "content_scripts": [
    {
      "matches": ["*://*.mozilla.org/*"],
      "js": ["clackalert.js"]
    }
    ],
    "browser_specific_settings": {
    "gecko": {
        "id": "clacks@jacketpotato.uk"
    }
    },
    "permissions": [
      "webRequest",
      "webRequestBlocking",
      "<all_urls>",
      "notifications"
    ]

}