{
    "manifest_version": 2,
    "name": "Clacks for Firefox",
    "version" : "0.1",
    "description": "Display X-Clacks-Overhead headers, and send GNU Terry Pratchett to websites",
    "icons": {
        "48": "icon48.png"
      },
    "background": 
        {
          "scripts": ["clacks.js"]
        },
    "browser_action": {
      "default_icon": "exclaim_off.png",
      "default_title": "Clacks"
    },
    "browser_specific_settings": {
    "gecko": {
        "id": "clacks@jacketpotato.uk"
    }
    },
    "permissions": [
      "webRequest",
      "webRequestBlocking",
      "<all_urls>",
      "tabs"
    ]

}